<section class="banner">
    <div class="wrapper">
        <h1>{{model.event.title}}</h1>
        <h4>{{model.event.date}}</h4>
        <h4>{{model.event.location}}</h4>
    </div>
</section>
<section class="event-information">
    <div class="wrapper">
        <h2>Participants</h2>
        <table class="participants-list">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    {{#each model.participants.[0].classes as |class|}}
                        <th class="mark">{{class.title}}</th>
                    {{/each}}
                </tr>
            </thead>
            {{#each model.participants as |participant|}}
                <tr>
                    <td>{{participant.name}}</td>
                    <td>{{participant.email}}</td>
                    <td>{{participant.phone}}</td>
                    {{#each participant.classes as |class|}}
                        <td class="mark {{if class.checked 'choosen'}}">+</td>
                    {{/each}}
                </tr>
            {{/each}}
        </table>
    </div>
</section>
